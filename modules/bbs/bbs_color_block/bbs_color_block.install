<?php

/**
 * @file
 * Install, update and uninstall functions for the bbs_color_block module.
 */

/**
 * Implements hook_install().
 */
function bbs_color_block_install() {
    @drupal_mkdir('public://bbs_color_block');
}

/**
 * Implements hook_uninstall().
 */
function bbs_color_block_uninstall() {
    @drupal_rmdir('public://bbs_color_block');
}