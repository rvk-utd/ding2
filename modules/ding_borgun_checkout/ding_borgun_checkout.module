/**
 * Implements hook_init().
 */
function ding_borgun_checkout_init() {
  if (user_is_logged_in()) {
    $client = aleph_client();
    $patron_handler = new AlephPatronHandler($client);
    try {
      $creds = ding_user_get_creds();
    }
    catch (DingProviderAuthException $e) {
      return;
    }
    $patron = $patron_handler->getPatronById($creds['name']);
    $patron_is_unregistered = $patron->getStatus() === 'Unregistered';
    global $user;
    // Allow the user to logout (this means AJAX requests too).
    $allowed_urls = array(
      "user/$user->uid/status-debts",
      'user/logout',
    );
    $allowed_urls = array_merge($allowed_urls, preg_split('/\n|\r\n?/', variable_get('ding_borgun_checkout_allowed_paths')));
    $is_ajax_request = !empty($_SERVER['HTTP_X_REQUESTED_WITH']) && strtolower($_SERVER['HTTP_X_REQUESTED_WITH']) === 'xmlhttprequest';
    foreach ($allowed_urls as $allowed_url) {
      if (strpos(current_path(), $allowed_url) === 0 || $is_ajax_request) {
        return;
      }
    }
    // Check if the patron is unregistered.
    if ($patron_is_unregistered && current_path() !== 'membership' && variable_get('ding_borgun_checkout_buy_membership_page_enabled', TRUE)) {
      drupal_goto('/membership');
    }
    // Check if the patrons account is expired.
    $current_date = new DateTime('now');
    $patron_is_expired = $patron->getExpiryDate() < $current_date;
    if ($patron_is_expired && current_path() !== 'membership/renew' && variable_get('ding_borgun_checkout_renew_membership_page_enabled', TRUE)) {
      drupal_goto('/membership/renew');
    }
  }
}

