/**
 * Returns list of allowed interest periods.
 *
 * @return array
 *   Array of days => human readable string.
 */
function aleph_get_interest_periods() {
  $periods = array(
    1 => 30,
    2 => 60,
    3 => 90,
    6 => 180,
    12 => 360,
  );
  $options = array();
  foreach ($periods as $months => $days) {
    $options[$days] = format_plural($months, '1 month', '@count months');
  }
  return $options;
}

