/**
 * Add cache table to cache objects we generate from searches.
 */
function primo_update_7001() {
  $schema = primo_schema();
  $ret = [];
  $ret[] = db_create_table('cache_primo', $schema['cache_primo']);
  return $ret;
}

/**
 * Set defaults for Primo.
 */
function primo_update_7002() {
